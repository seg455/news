                    <hr class="my-4">
            </div>
        </div>
    </div>


  <div class="container">
        <div class="row">
            <div class="col-sm-5 ">
                <h2>Top Headlines <i class="fas fa-newspaper"></i></h2>
                <a><%=@headline1%></a>
